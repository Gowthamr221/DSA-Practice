#include<iostream>
#include<vector>
#include<bits/stdc++.h>
#include<string.h>
using namespace std;

int main(){
int testCases;
cin >> testCases;

while(testCases --){
	int size;
	cin >> size;
	int sol=0;
	int last_min=0;
	vector <int> arr(size);
	for(int loop = 0;loop < size;loop++){
		cin >> arr.at(loop);
	}
	sort(arr,arr+size);
	cout << arr.at(0)+arr.at(1)<<endl;
}
}
